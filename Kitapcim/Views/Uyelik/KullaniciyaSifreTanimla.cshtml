@model Kitapcim.Models.KullaniciSifre

@{ViewBag.Title = "Kullanıcıya Şifre Tanımla";}
<h2>Kullanıcıya Şifre Tanımla</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Ad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.Ad
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Sifre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Sifre)
                @Html.ValidationMessageFor(model => model.Sifre)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Sifre2, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Sifre2)
                @Html.ValidationMessageFor(model => model.Sifre2)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Kullanıcı Listesine Dön", "KullaniciListele")
</div>