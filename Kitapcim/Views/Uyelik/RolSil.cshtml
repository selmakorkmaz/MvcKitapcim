<h3>Bu rolü silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Rol Bilgisi</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ad)
        </dd>
    </dl>
