@model Kitapcim.Models.KullaniciSifreDegistir

@{ ViewBag.Title = "Şifre Değiştir"; }
<h2>Şifre Değiştir</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Ad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.Ad
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EskiSifre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.EskiSifre)
                @Html.ValidationMessageFor(model => model.EskiSifre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YeniSifre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.YeniSifre)
                @Html.ValidationMessageFor(model => model.YeniSifre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YeniSifre2, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.YeniSifre2)
                @Html.ValidationMessageFor(model => model.YeniSifre2)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Kullanıcı Listesine Dön", "KullaniciListele")
</div>
